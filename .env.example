# .env.example
# Sentiric Media Service - Environment Configuration

# --- Service Identity ---
SERVICE_NAME=sentiric-media-service
ENV=development
RUST_LOG=info,sentiric_media_service=debug

# --- Network & Ports ---
MEDIA_SERVICE_HOST=localhost
MEDIA_SERVICE_GRPC_PORT=13031
MEDIA_SERVICE_HTTP_PORT=13030
MEDIA_SERVICE_METRICS_PORT=13032
MEDIA_SERVICE_GRPC_URL=localhost:13031

# RTP Range
RTP_SERVICE_LISTEN_ADDRESS=0.0.0.0
RTP_SERVICE_HOST=127.0.0.1
RTP_SERVICE_PORT_MIN=10000
RTP_SERVICE_PORT_MAX=10100
RTP_SERVICE_PORT_QUARANTINE_SECONDS=5

# --- Assets & Records ---
ASSETS_BASE_PATH=/sentiric-assets
MEDIA_SERVICE_RECORD_BASE_PATH=/sentiric-media-record

# --- Certificates (Dummy Paths for Local DEV) ---
# Gerçek test için bu dosyaların var olması gerekir. 
# Yoksa 'cargo run' öncesi dummy sertifika oluşturulmalı veya bu yollar geçerli bir yere bakmalı.
GRPC_TLS_CA_PATH=../sentiric-certificates/certs/ca.crt
MEDIA_SERVICE_CERT_PATH=../sentiric-certificates/certs/media-service-chain.crt
MEDIA_SERVICE_KEY_PATH=../sentiric-certificates/certs/media-service.key

AGENT_SERVICE_CERT_PATH=../sentiric-certificates/certs/agent-service-chain.crt
AGENT_SERVICE_KEY_PATH=../sentiric-certificates/certs/agent-service.key
DIALPLAN_SERVICE_CERT_PATH=../sentiric-certificates/certs/dialplan-service-chain.crt
DIALPLAN_SERVICE_KEY_PATH=../sentiric-certificates/certs/dialplan-service.key
USER_SERVICE_CERT_PATH=../sentiric-certificates/certs/user-service-chain.crt
USER_SERVICE_KEY_PATH=../sentiric-certificates/certs/user-service.key
SIP_SIGNALING_CERT_PATH=../sentiric-certificates/certs/sip-signaling-service-chain.crt
SIP_SIGNALING_KEY_PATH=../sentiric-certificates/certs/sip-signaling-service.key

# --- S3 / MinIO ---
BUCKET_ENDPOINT_URL=http://localhost:9000
BUCKET_REGION=auto
BUCKET_NAME=sentiric
BUCKET_ACCESS_KEY_ID=sentiric
BUCKET_SECRET_ACCESS_KEY=sentiric-secret-key

# --- RabbitMQ ---
# RABBITMQ_URL=amqp://sentiric:sentiric_pass@rabbitmq:5672/%2f

# --- Tuning ---
RTP_COMMAND_CHANNEL_BUFFER=32
LIVE_AUDIO_STREAM_BUFFER=64
RTP_SESSION_INACTIVITY_TIMEOUT_SECONDS=30