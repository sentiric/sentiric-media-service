# File: sentiric-media-service/.env.test (YENİ DOSYA)
# Bu dosya, `docker-compose.test.yml` ile otomatize testler için kullanılır.

# --- Test Ortamı ---
ENV="test"
RUST_LOG="warn,sentiric_media_service=debug" # Testlerde daha az gürültü
RUST_BACKTRACE=1

# --- Docker ---
NETWORK_NAME="sentiric-test-net"

# --- Sertifika Yolları (Docker içindeki yollar) ---
GRPC_TLS_CA_PATH="/etc/sentiric/tls/ca.crt"
MEDIA_SERVICE_CERT_PATH="/etc/sentiric/tls/media-service-chain.crt"
MEDIA_SERVICE_KEY_PATH="/etc/sentiric/tls/media-service.key"
AGENT_SERVICE_CERT_PATH="/etc/sentiric/tls/agent-service-chain.crt"
AGENT_SERVICE_KEY_PATH="/etc/sentiric/tls/agent-service.key"
DIALPLAN_SERVICE_CERT_PATH="/etc/sentiric/tls/dialplan-service-chain.crt"
DIALPLAN_SERVICE_KEY_PATH="/etc/sentiric/tls/dialplan-service.key"
SIP_SIGNALING_SERVICE_CERT_PATH="/etc/sentiric/tls/sip-signaling-chain.crt"
SIP_SIGNALING_SERVICE_KEY_PATH="/etc/sentiric/tls/sip-signaling.key"
USER_SERVICE_CERT_PATH="/etc/sentiric/tls/user-service-chain.crt"
USER_SERVICE_KEY_PATH="/etc/sentiric/tls/user-service.key"

# --- MinIO (Test için) ---
MINIO_ROOT_USER="sentiric"
MINIO_ROOT_PASSWORD="sentiric-secret-key"
MINIO_HOST="minio"
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# --- S3 Ayarları ---
S3_ENDPOINT_URL="http://minio:9000"
S3_REGION="auto"
S3_BUCKET_NAME="sentiric-test-bucket"
S3_ACCESS_KEY_ID="sentiric"
S3_SECRET_ACCESS_KEY="sentiric-secret-key"

# --- Media Service Ayarları ---
MEDIA_SERVICE_HOST="media-service"
MEDIA_SERVICE_GRPC_PORT=50052
MEDIA_SERVICE_GRPC_URL="media-service:50052"
MEDIA_SERVICE_METRICS_PORT=9091
MEDIA_SERVICE_RTP_TARGET_IP="media-service"

# --- RTP Ayarları ---
RTP_SERVICE_LISTEN_ADDRESS="0.0.0.0"
RTP_SERVICE_PORT_MIN=10000
RTP_SERVICE_PORT_MAX=10100
RTP_SERVICE_PORT_QUARANTINE_SECONDS=2

# --- YENİ EKLENEN YAPILANDIRILABİLİR DEĞERLER ---
RTP_SESSION_INACTIVITY_TIMEOUT_SECONDS=10
RTP_COMMAND_CHANNEL_BUFFER=32
LIVE_AUDIO_STREAM_BUFFER=64